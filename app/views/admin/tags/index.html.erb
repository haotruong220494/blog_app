<div class="col-12 pt-3">
  <div class="card">
    <div class="card-header">
      <h3 class="card-title"><i class="fas fa-list"></i>&ensp;Tag list</h3>
      <div class="card-tools">
        <%= search_form_for @q, url: admin_tags_path do |f| %>
          <div class="input-group input-group-sm">
            <%= f.search_field :name_cont, class: "form-control float-right", placeholder: "Search tag... " %>
            <div class="input-group-append">
              <%= f.submit "search", class: "button btn btn-default" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body table-responsive p-0">
      <table class="table table-hover text-nowrap">
        <thead>
          <tr>
            <th scope="col">Tag name</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <%= render @tags %>
        </tbody>
      </table>
    </div>
  </div>
  <%= paginate @tags, outer_window: 3 %>
</div>
