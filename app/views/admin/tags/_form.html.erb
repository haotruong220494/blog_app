<div class="card card-secondary form-article">
  <div class="card-header">
    <h3 class="card-title"> <%= yield(:form_type) %> </h3>
  </div>
  <div class="card-body">
    <%= simple_form_for [:admin, @tag], html: {class: "form-horizontal"}  do |f| %>
      <div class="form-body">
        <div class="form-group">
          <%= f.label :name, class: "col-md-4 control-label" %>
          <div class="col-md-12">
            <%= f.input :name, as: :string,
              input_html: { class: "form-control input-circle input-title", placeholder: "Write name..." },
              label: false,
              autofocus: true %>
          </div>
        </div>
        <div class="form-actions">
          <div class="col-md-12">
            <%= f.submit yield(:button_text)  , class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
