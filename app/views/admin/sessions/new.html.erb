<div class="haotruong-form-login">
  <div class="img-logo">
    <%= image_tag("logo.png") %>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="group-input">
      <div class="form-group">
        <label>Email</label>
        <%= f.text_field :email, autofocus: true, class: "email",
          placeholder: t("sessions.new.placeholder_email"), id: "email-login" %>
      </div>
      <div class="form-group">
        <label>Mật khẩu</label>
        <%= f.password_field :password, class: "password", placeholder: t("sessions.new.placeholder_password") %>
      </div>
    </div>
    <%= f.submit t(".submit") %>
  <% end %>
</div>

<% content_for :body_class, "hold-transition login-page" %>
